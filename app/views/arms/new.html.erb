<h1>New Arm</h1>

<% if @arm.errors.present? %>
  <ul>
    <% @arm.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @arm, url: '/arms', local: true) do |f| %>
    <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </p>
    <p>
    <%= f.label :limit %>
    <%= f.text_field :limit %>
    </p>
    <%= f.submit 'create' %>
<% end %>

